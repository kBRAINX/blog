    <section class="services">
        <h2>Our Service</h2>
        <div class="service-cards">
            {% for category in categories|slice(0, 7) %}
                <div class="service-card">
                    <img src="{{ category.thumbnail ? '/images/categories/' ~ category.thumbnail : '/images/category.png' }}" alt="{{ category.getName }}">
                    <h3><strong> {{ category.name }} </strong></h3>
                    <p> {{ category.description| default('')}} </p>
                </div>
            {% endfor %}
        </div>
    </section>

    <section class="how-it-works">
        <div class="how-it-works-title">
            <h2>How It Works</h2>
        </div>
        <div class="how-it-works-steps">
            <div class="step" data-step="1">
                <strong>Register</strong>
                <p>Create a free account by providing your details. Customize your profile and set your interests.</p>
            </div>
            <div class="step" data-step="2">
                <strong>Explore Blogs</strong>
                <p>Browse through a variety of blog posts shared by other users. Use search and filter options to find content that interests you.</p>
            </div>
            <div class="step" data-step="3">
                <strong>Create Your Own Posts</strong>
                <p>Write and publish your own blog posts. Include text, images, and videos to make your content engaging.</p>
            </div>
            <div class="step" data-step="4">
                <strong>Engage with the Community</strong>
                <p>Comment on and like posts you enjoy. Follow other users to keep up with their latest content.</p>
            </div>
            <div class="step" data-step="5">
                <strong>Stay Updated</strong>
                <p>Receive notifications for new posts, comments, and updates from users you follow.</p>
            </div>
        </div>
    </section>

    <section class="recent-posts">
        <div class="section-title">
            <h2>Recent Posts</h2>
        </div>
        <div class="posts-container">
            {% for post in posts|slice(0, 5) %}
                <div class="post-card">
                    <div class="post-content">
                        <h3>{{ post.title }}</h3>
                        <span class="post-category">{{ post.category.name }}</span>
                        <p>{{ post.content|slice(0, 100) }}{% if post.content|length > 100 %}...{% endif %}</p>
                        <a href="{{ path('post.show', {id: post.id}) }}" class="read-more">Read More</a>
                    </div>
                </div>
            {% endfor %}
        </div>
        <div class="get-posts-container">
            <a href="{{ path('post.index') }}" class="get-posts-button">Get Posts</a>
        </div>
    </section>

    <section class="previous-work">
