{% extends 'home.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}
    <style>
        body {
            margin: 0;
            font-family: 'Arial', sans-serif;
            background-color: #f4f4f4;
        }
        header {
            position: relative;
            background: linear-gradient(to bottom right, #5e9cf8, #dbfaf9);
            color: #fff;
            padding: 20px 0 0 0;
        }
        nav {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 0 50px;
        }
        nav .logo {
            font-size: 30px;
            font-weight: bold;
        }
        .logo a{
            text-decoration: none;
            color: #fff;
        }
        nav ul {
            display: flex;
            list-style: none;
        }
        nav ul li {
            margin: 0 15px;
        }
        nav ul li a {
            color: #fff;
            text-decoration: none;
            font-size: 20px;
        }
        .nav-link{
            color: #fff;
            text-decoration: none;
            font-size: 20px;
        }
        .action-button svg {
            width: 30px;
            height: 30px;
            margin-right: 20px;
            fill: #fff;
        }
        .action-button{
            color: #fff;
            text-decoration: none;
            font-size: 20px;
        }
        .nav-link.active {
            color: #2e7df1;
            font-size: 20px;
        }
        nav .contact-btn {
            font-size: 20px;
            background-color: #fff;
            color: #5e9cf8;
            padding: 10px 20px;
            text-decoration: none;
            border-radius: 25px;
        }
        .hero {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 100px 50px 0 50px;
        }
        .hero-text {
            margin-left: 150px;
            max-width: 800px;
        }
        .hero-text h1 {
            font-size: 60px;
            margin-bottom: 20px;
        }
        .hero-text p {
            font-size: 25px;
            margin-bottom: 50px;
        }
        .hero .case-study-btn {
            background-color: #fff;
            color: #5e9cf8;
            padding: 20px 35px;
            text-decoration: none;
            border-radius: 40px;
            font-size: 20px;
            margin: auto 250px;
        }
        .hero-image img {
            max-width: 1000px;
            margin-right: 100px;
        }
        .wave {
            display: flex;
            position: relative;
            width: 100%;
            height: 100px;
            margin-top: -5px;
            overflow: hidden;
        }
        .wave svg {
            position: absolute;
            bottom: 0;
            left: 0;
            width: 100%;
            height: 100%;
        }
        .services {
            text-align: center;
            padding: 50px 20px;
            background-color: #fff;
        }
        .services h2 {
            font-size: 36px;
            margin-bottom: 40px;
        }
        .service-cards {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
            justify-content: center;
            padding: 20px;
        }
        .service-card {
            margin: auto 30px;
            height: 270px;
            background-color: #fff;
            padding: 10px;
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            width: calc(32% - 10px);
            max-width: 250px;
            text-align: center;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            cursor: pointer;
        }
        .service-card img {
            width: 200px;
            height: 150px;
            margin-bottom: 5px;
            border-radius: 50%;
            object-fit: cover;
        }
        .service-card h3 {
            font-size: 24px;
            margin: 10px 0 5px;
        }
        .service-card p {
            color: #333;
            padding: 0 10px 10px;
            font-size: 1em;
            line-height: 1.6;
        }
        .service-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.2);
        }
        .how-it-works {
            display: flex;
            flex-wrap: wrap;
            gap: 20px;
        }
        .how-it-works-title {
            flex: 1 1 45%;
            text-align: center;
            padding-top: 120px;
        }
        .how-it-works-title h2{
            font-size: 60px;
        }
        .how-it-works-steps {
            flex: 1 1 45%;
            padding: 10px;
            border-left: 2px solid #5e9cf8;
        }
        .step {
            margin: 20px 0;
            padding-left: 20px;
            position: relative;
        }
        .step::before {
            content: attr(data-step);
            position: absolute;
            left: -30px;
            top: 0;
            font-size: 24px;
            font-weight: bold;
            color: #5e9cf8;
            background: #fff;
            border: 2px solid #5e9cf8;
            border-radius: 50%;
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
        }
        .step p {
            margin: 0;
            font-size: 18px;
            line-height: 1.6;
            color: #333;
        }
        .step strong {
            display: block;
            margin-bottom: 5px;
            font-size: 20px;
            color: #5e9cf8;
        }
        .previous-work {
            text-align: center;
            padding: 50px 20px;
            background-color: #fff;
        }
        .recent-posts {
            padding: 40px 20px;
            background-color: #f9f9f9;
        }

        .section-title h2 {
            text-align: center;
            font-size: 2.5em;
            color: #333;
            margin-bottom: 30px;
        }

        .posts-container {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-between;
            gap: 20px;
        }

        .post-card {
            background: #fff;
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            width: calc(20% - 20px);
            display: flex;
            flex-direction: column;
            padding: 15px;
        }

        .post-content {
            display: flex;
            flex-direction: column;
            flex-grow: 1;
        }

        .post-content h3 {
            font-size: 1.5em;
            color: #5e9cf8;
            margin-bottom: 10px;
        }

        .post-category {
            font-size: 0.9em;
            color: #999;
            margin-bottom: 10px;
        }

        .post-content p {
            flex-grow: 1;
            color: #555;
        }

        .read-more {
            text-align: center;
            display: inline-block;
            padding: 10px 20px;
            margin-top: 15px;
            background-color: #5e9cf8;
            color: #fff;
            border-radius: 5px;
            text-decoration: none;
            transition: background-color 0.3s ease;
        }

        .read-more:hover {
            background-color: #4a8bd4;
        }

        .get-posts-container {
            text-align: center;
            margin-top: 40px;
            border-radius: 5px;
        }

        .get-posts-button {
            display: inline-block;
            padding: 10px 20px;
            background-color: #5e9cf8;
            color: #fff;
            font-size: 18px;
            border-radius: 5px;
            text-decoration: none;
            transition: background-color 0.3s ease;
        }

        .get-posts-button:hover {
            background-color: #4a8bd4;
        }
            /*responsive*/
        @media (max-width: 1200px) {
            .post-card {
                width: calc(33.33% - 20px);
            }
        }
        @media (max-width: 768px) {
            .post-card {
                width: calc(50% - 20px);
            }
        }
        @media (max-width: 480px) {
            .post-card {
                width: 100%;
            }
        }

    </style>

