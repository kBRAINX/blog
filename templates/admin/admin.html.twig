<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Administration{% endblock %}</title>
    <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <!----===== Iconscout CSS ===== -->
    <link rel="stylesheet" href="https://unicons.iconscout.com/release/v4.0.0/css/line.css">
    <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    {% block stylesheets %}
    {% endblock %}

    {% block javascripts %}
        {% block importmap %}{{ importmap('app') }}{% endblock %}
    {% endblock %}

</head>
<body>

    <nav>
        <div class="logo-name">
            <a class="website" href="{{ path('home') }}">
                <div class="logo-image">
                    <img src="{{ asset('images/dev.jpg') }}" alt="">
                </div>
                <span class="logo_name">Deca-Techs</span>
            </a>
        </div>

        <div class="menu-items">
            <ul class="nav-links">
                <li>
                    <a href="{{ path('home') }}" class="side-link {{ app.current_route == 'home' ? 'active' : '' }}">
                        <i class="uil uil-airplay"></i>
                        <span class="link-name">Go To Website</span>
                    </a>
                </li>
                <li>
                    <a href="{{ path('dashboard') }}" class="side-link {{ app.current_route == 'dashboard' ? 'active' : '' }}">
                        <i class="uil uil-estate"></i>
                        <span class="link-name">Dashboard</span>
                    </a>
                </li>
                <li>
                    <a href="{{ path('admin.category.index') }}" class="side-link {{ app.current_route starts with 'admin.category.' ? 'active' : '' }}">
                        <i class="uil uil-files-landscapes"></i>
                        <span class="link-name">Services</span>
                    </a>
                </li>
                <li>
                    <a href="{{ path('admin.service') }}" class="side-link {{ app.current_route == 'admin.service' ? 'active' : '' }}">
                        <i class="uil uil-filter"></i>
                        <span class="link-name">Filter Services</span>
                    </a>
                </li>
                <li>
                    <a href="{{ path('admin.post.index') }}" class="side-link {{ app.current_route starts with 'admin.post.' ? 'active' : '' }}">
                        <i class="uil uil-postcard"></i>
                        <span class="link-name">Posts</span>
                    </a>
                </li>
                <li>
                    <a href="{{ path('admin.user.index') }}" class="side-link {{ app.current_route == 'admin.user.index' ? 'active' : '' }}">
                        <i class="uil uil-user"></i>
                        <span class="link-name">Users</span>
                    </a>
                </li>
            </ul>

            <ul class="logout-mode">
                <li>
                    <a class="logout" href="{{ path('app_logout') }}">
                        <i class="uil uil-signout"></i>
                        <span class="link-name">Logout</span>
                    </a>
                </li>

                <li class="mode">
                    <a href="#">
                        <i class="uil uil-setting"></i>
                        <span class="link-name">Settings</span>
                    </a>

                    <div class="mode-toggle">
                        <span class="switch"></span>
                    </div>
                </li>
            </ul>
        </div>
    </nav>

    <main>
        {% include 'partials/flash.html.twig' %}
        {% block body %}
        {% endblock %}
    </main>

    <footer>
        <p>&copy; 2024 My Website. All Rights Reserved.</p>
    </footer>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const sidebarToggle = document.querySelector('.sidebar-toggle');
            const sidebar = document.querySelector('nav');
            const mainContent = document.querySelector('.dashboard');
            const modeToggle = document.querySelector('.mode-toggle');
            const body = document.body;

            sidebarToggle.addEventListener('click', function() {
                sidebar.classList.toggle('close');
                mainContent.classList.toggle('close');
            });

            modeToggle.addEventListener('click', function() {
                body.classList.toggle('dark');
            });
        });
    </script>
</body>
</html>
